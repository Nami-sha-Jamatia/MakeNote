<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.example.MakeNote" >

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/note_icon"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/note_icon_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.MakeNote"
        tools:targetApi="31" >
        <activity
            android:name="com.example.MakeNote.MainActivity"
            android:exported="false" />
        <activity
            android:name="com.example.MakeNote.notedetails"
            android:exported="false"
            android:theme="@style/Theme.AppCompat.DayNight.NoActionBar" />
        <activity
            android:name="com.example.MakeNote.editnoteactivity"
            android:exported="false"
            android:theme="@style/Theme.AppCompat.DayNight.NoActionBar" />
        <activity
            android:name="com.example.MakeNote.createnote"
            android:exported="false"
            android:theme="@style/Theme.AppCompat.DayNight.NoActionBar" />
        <activity
            android:name="com.example.MakeNote.notesactivity"
            android:exported="false" />
        <activity
            android:name="com.example.MakeNote.forgotPassword"
            android:exported="false" />
        <activity
            android:name="com.example.MakeNote.signup"
            android:exported="false" />
        <activity
            android:name="com.example.MakeNote.activity_splash"
            android:exported="true" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>